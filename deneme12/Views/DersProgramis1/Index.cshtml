                                        </th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-10">
                                            @await Component.InvokeAsync("GunList")
                                        </th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-10">
                                            @await Component.InvokeAsync("DerslikList")
                                        </th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-10">
                                            @await Component.InvokeAsync("DersList")
                                        </th>


                                    </tr>
                                </thead>
