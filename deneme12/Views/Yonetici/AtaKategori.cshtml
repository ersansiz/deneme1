@model List<OgrenciAtaModel>
@{
    Layout = null;
}
<form asp-action="AtaKategori" method="post">

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].SinifId" />
            <input type="hidden" asp-for="@Model[i].SinifName" />
            <input type="checkbox" asp-for="@Model[i].Varmi" class="form-check-input" />
            <label class="form-check-label">@Model[i].SinifName</label>
        </div>
    }
    <div class="form-group">
        <button type="submit" class="btn btn-info">Kaydet</button>
    </div>
</form>
