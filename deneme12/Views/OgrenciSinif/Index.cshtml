        <div class="row my-4">
            <div class="col-lg-12 col-md-6 mb-md-0 mb-4">
                <div class="card">
                    <div class="card-header pb-0">
                        <div class="row">
                            <div class="col-6 d-flex align-items-center">
                                <h6 class="mb-0">Öğrenci Bilgileri</h6>
                            </div>
                            
                            <div class="col-6 text-end">
                                <a class="btn  mb-0" asp-action="OgrenciBilgi" asp-controller="Yonetici"><i class="fa-solid fa-list"></i></a>
                                <a class="btn bg-gradient-dark mb-0" asp-action="Ekle" asp-controller="Yonetici"><i class="fas fa-plus"></i>&nbsp;&nbsp;Öğrenci Ekle</a>
                            </div>
                            @if (Model.Ogrenci?.Count() > 0)
                            {
                                @foreach (var item in Model.Ogrenci)
                                {
                                    <div class="card-body pt-4 p-3">
                                        <ul class="list-group">
                                            <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                                                <div class="d-flex flex-column">
                                                    <h6 class="mb-3 text-sm">@item.OgrenciName</h6>
                                                    <span class="mb-2 text-xs">Öğrencinin Sınıfı :<span class="text-dark ms-sm-2 font-weight-bold">@(string.Join(",",item.OgrenciSinif.Select(i=>i.Sinif.SinifName)))</span></span>
                                                    <span class="mb-2 text-xs">Telefon Numarası :<span class="text-dark ms-sm-2 font-weight-bold">@item.Telefon</span></span>
                                                    <span class="text-xs">Veli Adı :<span class="text-dark ms-sm-2 font-weight-bold"><VeliAd ogrenci-id="item.OgrenciID"></VeliAd></span></span>

                                                </div>
                                                <div class="ms-auto text-end">
                                                    <a class="btn btn-link text-danger text-gradient px-3 mb-0" asp-action="Sil" asp-controller="Yonetici" asp-route-id="@item.OgrenciID"><i class="far fa-trash-alt me-2"></i>Sil</a>
                                                    <a class="btn btn-link text-dark px-3 mb-0" asp-action="Güncelle" asp-controller="Yonetici" asp-route-id="@item.OgrenciID"><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>Düzelnle</a>
                                                    <a class="btn btn-link text-dark px-3 mb-0" asp-action="OgrenciDetay" asp-controller="Yonetici" asp-route-id="@item.OgrenciID"><i class="fa-solid fa-eye me-2" aria-hidden="true"></i>Detay</a>
                                                </div>

                                            </li>

                                        </ul>

                                        <div class="border-1 d-flex mt-0  p-1 mb-0 bg-gray-300 border-radius-lg">
                                            <ul class="nav nav-pills nav-fill p-1 bg-transparent" role="tablist">
                                                <li class="nav-item">
                                                    <a class="btn bg-gray-100 p-1 mr-2  px-3 mb-0  "  asp-action="EditOgrenci" asp-controller="OgrenciSinif" asp-route-id="@item.OgrenciID"><i class="fa-solid fa-chalkboard-user me-2"></i>  Sinif Ata</a>

                                                </li>
                                                <li class="nav-item">
                                                    <a class="btn bg-gray-100 p-1 mr-2  px-3 mb-0  "   asp-action="VeliAta" asp-controller="OgrenciSinif" asp-route-id="@item.OgrenciID"><i class="fa-solid fa-chalkboard-user me-2"></i>  Veli Ata</a>

                                                </li>
                                                <li class="nav-item">
                                                    <a class="btn bg-gray-100 p-1 mr-2  px-3 mb-0   " asp-action="EditOgrenci" asp-controller="OgrenciSinif" asp-route-id="@item.OgrenciID"><i class="fa-solid fa-chalkboard-user me-2"></i>  Devamsızlık</a>

                                                </li>
                                                <li class="nav-item">
                                                    <a class="btn bg-gray-100 p-1 mr-2  px-3 mb-0   " asp-action="EditOgrenci" asp-controller="OgrenciSinif" asp-route-id="@item.OgrenciID"><i class="fa-solid fa-chalkboard-user me-2"></i>  Sınav Girişi</a>

                                                </li>
                                                <li class="nav-item">
