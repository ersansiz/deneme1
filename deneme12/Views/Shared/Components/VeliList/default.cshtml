@model List<Veli>
  @foreach(var item in Model)
                                    {
                                      <div class="card-body pt-4 p-3">
                    <ul class="list-group">
                        <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                            <div class="d-flex flex-column">
                                <h6 class="mb-3 text-sm">@item.VeliName</h6>
                                
                                <span class="mb-2 text-xs">Telefon Numarası :<span class="text-dark ms-sm-2 font-weight-bold">@item.Telefon</span></span>
                                <span class="text-xs">Öğrenci Adı :<span class="text-dark ms-sm-2 font-weight-bold"><OgrenciAd veli-id="item.VeliID"></OgrenciAd></span></span>
                                
                            </div>
                            <div class="ms-auto text-end">
                                <a class="btn btn-link text-danger text-gradient px-3 mb-0" asp-action="Sil" asp-route-id="@item.VeliID"><i class="far fa-trash-alt me-2"></i>Sil</a>
                                <a class="btn btn-link text-dark px-3 mb-0" asp-action="Güncelle" asp-route-id="@item.VeliID"><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>Edit</a>
                            </div>
                        </li>

                    </ul>
                </div>
                                    }